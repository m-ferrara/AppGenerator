doctype html
#attribute-detail.detail-view
  nav
    .col-sm-10
      ul#toggle-edit.nav.nav-pills
        li.disabled
          a Options
        li.separator
        li.active
          a.view View
        li
          a.edit Edit
  .clear
  .form-horizontal
    .form-group
      label.control-label.col-sm-2(for="name") name:
      .col-sm-8
        input#name.form-control(type="text",name="name",value="{{ name }}",disabled)
    .form-group
      label.control-label.col-sm-2(for="type") type:
      .col-sm-8
        input#type.form-control(type="text",name="type",value="{{ type }}",disabled)
    .form-group
      label.control-label.col-sm-2(for="length") length:
      .col-sm-8
        input#length.form-control(type="text",name="length",value="{{ length }}",disabled)
    .form-group
      label.control-label.col-sm-2(for="regex") regex:
      .col-sm-8
        input#regex.form-control(type="text",name="regex",value="{{ regex_pattern }}",disabled)
    .form-group
      .col-sm-2
      .checkbox.col-sm-8
        label(for="primary-key")
          input#is_primary_key(name="is_primary_key",type="checkbox","{{ checked is_primary_key }}",disabled)
          | is primary key:
    .form-group
      .col-sm-2
      .checkbox.col-sm-8
        label(for="unique")
          input#is_unique(name="is_unique",type="checkbox","{{ checked is_unique }}",disabled)
          | is unique:
    #edit-controls
      .col-sm-2
      .col-sm-8.text-right
        button.btn.btn-danger.delete(type="button") Delete
        button.btn.btn-success.save-edit(type="button") Save
